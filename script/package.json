{
  "name": "script",
  "version": "0.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "budo index.js --live --ssl --cert local.offen.dev.pem --key local.offen.dev-key.pem",
    "test": "mochify --allow-chrome-as-root ./**/*.test.js",
    "pretest": "dependency-check package.json",
    "posttest": "standard",
    "fix": "standard --fix",
    "prebuild": "mkdir -p dist",
    "build": "browserify index.js -p tinyify > dist/script.js"
  },
  "dependencies": {
    "offen": "file:./../packages"
  },
  "devDependencies": {
    "browserify": "^16.2.3",
    "budo": "^11.6.2",
    "dependency-check": "^3.3.0",
    "envify": "^4.1.0",
    "mochify": "^6.2.0",
    "standard": "^12.0.1",
    "tinyify": "^2.5.0"
  },
  "browserify": {
    "transform": [
      "envify"
    ]
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
