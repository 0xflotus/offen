{
  "name": "vault",
  "version": "0.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "budo index.js --live --ssl --cert local.offen.dev.pem --key local.offen.dev-key.pem",
    "pretest": "dependency-check package.json",
    "test": "mochify --allow-chrome-as-root ./**/*.test.js",
    "posttest": "standard",
    "fix": "standard --fix",
    "build": "npm run build:bundle && npm run build:inline",
    "build:bundle": "browserify ./index.js -p tinyify > ./dist/index.js",
    "build:inline": "html-inline ./dist/template.html > ./dist/index.html --ignore-styles",
    "prebuild": "rm -rf ./dist && mkdir -p ./dist && cp ./index.html ./dist/template.html",
    "postbuild": "rm ./dist/index.js ./dist/template.html"
  },
  "dependencies": {
    "dexie": "^2.0.4",
    "offen": "file:./../packages",
    "unibabel": "^2.1.8",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "browserify": "^16.2.3",
    "budo": "^11.6.2",
    "dependency-check": "^3.3.0",
    "envify": "^4.1.0",
    "fetch-mock": "^7.3.3",
    "html-inline": "^1.2.0",
    "mochify": "^6.2.0",
    "standard": "^12.0.1",
    "tinyify": "^2.5.1",
    "trumpet": "^1.7.2"
  },
  "browserify": {
    "transform": [
      "envify"
    ]
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
