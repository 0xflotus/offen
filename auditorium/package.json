{
  "name": "auditorium",
  "version": "0.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "budo index.js --live --pushstate --ssl --cert local.offen.dev.pem --key local.offen.dev-key.pem",
    "test": "mochify --allow-chrome-as-root ./**/*.test.js",
    "pretest": "dependency-check package.json",
    "posttest": "standard",
    "fix": "standard --fix"
  },
  "dependencies": {
    "choo": "^6.13.3",
    "choo-devtools": "^2.5.1",
    "offen": "file:./../packages",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "budo": "^11.6.2",
    "dependency-check": "^3.3.0",
    "envify": "^4.1.0",
    "mochify": "^6.2.0",
    "standard": "^12.0.1"
  },
  "browserify": {
    "transform": [
      "envify"
    ]
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
